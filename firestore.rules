
/**
 * @fileoverview Firestore Security Rules for the EMA application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data,
 * while allowing public read access to shared resources like exam definitions.
 * An admin user is granted special access to list all users for the dashboard.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Readable only by the user, listable only by an admin.
 * - /exams/{examId}: Stores exam definitions, publicly readable.
 * - /questionPapers/{paperId}: Stores structured question papers for training. Publicly queryable, but writeable only by authenticated users.
 * - /feedback/{feedbackId}: Stores user feedback. Writable by anyone, readable only by admin.
 * - /users/{userId}/uploads/{uploadId}: Stores user-uploaded files and metadata.
 * - /users/{userId}/analyses/{analysisId}: Stores AI analysis results for user uploads.
 * - /users/{userId}/quizzes/{quizId}: Stores quizzes generated by the AI.
 * - /users/{userId}/logs/{logId}: Stores user-specific logs.
 * - /logs/{logId}: Stores system-wide logs.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's ID matches the provided user ID.
     * @param {string} userId The user ID to compare against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * @description Checks if the request is from the designated admin user.
     */
    function isAdmin() {
      // This UID is designated as the admin for dashboard access.
      return request.auth.uid == 'jq3cP4WbtVYdwOAwHYMwYjext8t2';
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     * @param {string} userId The user ID to compare against.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Stores user profiles. Accessed by the user and admins only.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Allow admin to list users for the dashboard.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
      
      // Admin can read subcollections for stats
      match /{allPaths=**} {
        allow get, list: if isAdmin();
      }
    }

    /**
     * @description Stores exam types supported by the platform.
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Stores structured question papers. Read is public for duplicate checks.
     */
    match /questionPapers/{paperId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.uploadedBy == request.auth.uid;
        allow update, delete: if false; // Papers are immutable
    }

    /**
     * @description Stores user feedback.
     */
    match /feedback/{feedbackId} {
        allow get, list: if isAdmin();
        allow create: if true; // Allow anyone (even unauthenticated users) to submit feedback
        allow update, delete: if false;
    }

    /**
     * @description Stores file upload metadata.
     */
    match /users/{userId}/uploads/{uploadId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores AI analysis results for uploaded files.
     */
    match /users/{userId}/analyses/{analysisId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores quizzes generated by the AI.
     */
    match /users/{userId}/quizzes/{quizId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }
    
    /**
     * @description Stores user-specific log entries.
     */
    match /users/{userId}/logs/{logId} {
      allow get, list: if isOwner(userId);
      allow create: if isSignedIn(); // Any signed-in user can create a log entry under their ID.
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Stores system-wide log entries.
     */
    match /logs/{logId} {
      allow get, list: if false;
      allow create: if isSignedIn(); //Any authenticated user can create a log
      allow update, delete: if false;
    }
  }
}

    